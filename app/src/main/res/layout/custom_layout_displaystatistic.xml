<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt_customstatistic_orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:fontFamily="sans-serif"
            android:text="Mã đơn: 1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_customstatistic_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calendar_today_24"
            android:layout_toStartOf="@id/txt_customstatistic_orderDate"
            android:layout_toLeftOf="@id/txt_customstatistic_orderDate"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_customstatistic_orderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/07/2020"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/muli"
            android:textSize="16sp"/>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/txt_customstatistic_staffName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lê Gia Huy"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/muli_black"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/txt_customstatistic_orderTable"
            android:layout_below="@id/txt_customstatistic_staffName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bàn 1"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_customstatistic_totalAmount"
            android:layout_below="@id/txt_customstatistic_orderTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120000 VNĐ"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/txt_customstatistic_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/corner_border_orange"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Đã thanh toán"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>