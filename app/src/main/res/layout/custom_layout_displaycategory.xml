<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/custom_border">
            <ImageView
                android:id="@+id/img_customcategory_CategoryPicture"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/espresso"
                android:background="@drawable/custom_border"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/txt_customcategory_CategoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_customcategory_CategoryPicture"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/muli_black"
                android:text="Tên loại"
                android:textColor="@color/white"
                android:textSize="25sp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>