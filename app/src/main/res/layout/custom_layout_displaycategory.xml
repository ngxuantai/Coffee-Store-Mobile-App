<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/img_customcategory_CategoryPicture"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/espresso" />

        <TextView
            android:id="@+id/txt_customcategory_CategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_customcategory_CategoryPicture"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/muli"
            android:text="Tên loại"
            android:textColor="@color/black"
            android:textSize="24sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>