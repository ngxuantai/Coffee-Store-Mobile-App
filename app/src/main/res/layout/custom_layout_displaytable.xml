<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@drawable/border_radius_light">

    <TextView
        android:id="@+id/txt_customtable_tableName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        />

    <ImageView
        android:id="@+id/img_customtable_table"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_baseline_event_seat_40"
        android:layout_below="@id/txt_customtable_tableName"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_radius_primary"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/img_customtable_callOrder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/img_customtable_table"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/border_radius"
        android:padding="8dp"
        android:src="@drawable/ic_baseline_fastfood_24"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/img_customtable_pay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_payments_24"
        android:background="@drawable/border_radius"
        android:padding="8dp"
        android:layout_below="@id/img_customtable_table"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/img_customtable_callOrder"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/img_customtable_pressButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_backspace_24"
        android:background="@drawable/border_radius"
        android:padding="8dp"
        android:layout_below="@id/img_customtable_table"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/img_customtable_pay"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        />
</RelativeLayout>
